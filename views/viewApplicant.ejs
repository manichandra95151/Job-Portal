    <div class="min-h-screen bg-gradient-to-r from-purple-400 to-indigo-500 dark:from-purple-700 dark:to-indigo-800 min-h-screen">
        <div class="container mx-auto py-10 px-4">
          <div class="space-y-6">
            <div class="space-y-2 flex flex-col items-center text-center">
                <h1 class="text-2xl md:text-4xl text-3xl font-bold text-gray-50 dark:text-gray-300">
                  Job Applicants
                </h1>
                <p class="text-sm md:text-lg bg-purple-100 text-purple-800 font-semibold py-2 rounded-lg">
                  Review and manage applications for the <span class="font-semibold"><%= jobTitle %></span> position.
                </p>
              </div>
              
            <div class="bg-white rounded-lg shadow-lg overflow-x-auto">
              <!-- Table container made horizontally scrollable -->
              <table class="table-auto w-full text-sm md:text-base">
                <caption class="bg-blue-50 text-blue-800 font-semibold py-2">
                  A list of recent job applicants
                </caption>
                <thead>
                  <tr class="bg-blue-500">
                    <th class="text-white py-2 px-3 md:py-3 md:px-4 text-left">Name</th>
                    <th class="text-white py-2 px-3 md:py-3 md:px-4 text-left">Email</th>
                    <th class="text-white py-2 px-3 md:py-3 md:px-4 text-left">Contact</th>
                    <th class="text-white py-2 px-3 md:py-3 md:px-4 text-left">Resume</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (applicants.length === 0) { %>
                    <tr>
                      <td colspan="4" class="text-center py-4">No applicants found.</td>
                    </tr>
                  <% } else { %>
                    <% applicants.forEach((applicant, index) => { %>
                      <tr class="<%= index % 2 === 0 ? 'bg-blue-50' : 'bg-white' %>">
                        <td class="py-2 px-3 md:py-3 md:px-4 font-medium text-blue-800">
                          <%= applicant.name %>
                        </td>
                        <td class="py-2 px-3 md:py-3 md:px-4 text-blue-600">
                          <%= applicant.email %>
                        </td>
                        <td class="py-2 px-3 md:py-3 md:px-4">
                          <%= applicant.contact %>
                        </td>
                        <td class="py-2 px-3 md:py-3 md:px-4">
                          <a
                            href="/resume/<%= applicant._id %>"
                            class="inline-flex items-center text-blue-500  hover:text-white hover:bg-blue-500 rounded px-2 py-1 md:px-4 md:py-2 border border-blue-500 transition-colors duration-300 w-full text-center sm:w-auto"
                          >
                            <!-- Font Awesome File Icon -->
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              viewBox="0 0 384 512"
                              class="h-4 w-4 mr-2"
                            >
                              <path
                                d="M320 464c8.8 0 16-7.2 16-16l0-288-80 0c-17.7 0-32-14.3-32-32l0-80L64 48c-8.8 0-16 7.2-16 16l0 384c0 8.8 7.2 16 16 16l256 0zM0 64C0 28.7 28.7 0 64 0L229.5 0c17 0 33.3 6.7 45.3 18.7l90.5 90.5c12 12 18.7 28.3 18.7 45.3L384 448c0 35.3-28.7 64-64 64L64 512c-35.3 0-64-28.7-64-64L0 64z"
                              />
                            </svg>
                            View Resume
                          </a>
                        </td>
                      </tr>
                    <% }); %>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      