 <div class="bg-gradient-to-r from-purple-400 to-indigo-500 dark:from-purple-700 dark:to-indigo-800 min-h-screen">
    <header class="py-10">
      <div class="container flex items-center gap-4 px-4 md:px-6">
        <a href="/" class="flex items-center gap-2 text-lg font-semibold text-gray-50 dark:text-gray-300">
          Home
        </a>
        <a class="flex items-center space-x-2 text-sm font-medium text-white dark:text-gray-300">
          <h1 class="text-2xl font-bold tracking-tighter sm:text-3xl text-gray-50 dark:text-gray-300">
            Posted Jobs
          </h1>
        </a>
        <div class="ml-auto flex items-center gap-4">
          <a href="/logout">
            <button class="inline-flex items-center justify-center text-sm font-medium text-white bg-gray-900 h-9 rounded-md px-3">
              Logout
            </button>
          </a>
        </div>
      </div>
    </header>
    <main class="flex-1">
      <section class="py-12">
        <div class="container px-4 md:px-6">
          <div class="text-center mb-6">
            <h2 class="text-3xl font-bold text-gray-50 dark:text-gray-300">Your Posted Jobs</h2>
          </div>
          <div class="bg-white rounded-lg shadow-lg overflow-x-auto">
            <table class="table-auto w-full text-sm md:text-base">
              <caption class="bg-purple-100 text-purple-800 font-semibold py-2">
                A list of your posted jobs
              </caption>
              <thead>
                <tr class="bg-purple-500">
                  <th class="text-white py-2 px-3 md:py-3 md:px-4 text-left">Job Designation</th>
                  <th class="text-white py-2 px-3 md:py-3 md:px-4 text-left">Company Name</th>
                  <th class="text-white py-2 px-3 md:py-3 md:px-4 text-left">Location</th>
                  <th class="text-white py-2 px-3 md:py-3 md:px-4 text-left">Salary</th>
                  <th class="text-white py-2 px-3 md:py-3 md:px-4 text-left">Posted On</th>
                  <th class="text-white py-2 px-3 md:py-3 md:px-4 text-left">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (postedJobs.length > 0) { %>
                  <% postedJobs.forEach((job, index) => { %>
                    <tr class="<%= index % 2 === 0 ? 'bg-purple-50' : 'bg-white' %>">
                      <td class="py-2 px-3 md:py-3 md:px-4 font-medium text-gray-800">
                        <%= job.jobDesignation %>
                      </td>
                      <td class="py-2 px-3 md:py-3 md:px-4 text-gray-700">
                        <%= job.companyName %>
                      </td>
                      <td class="py-2 px-3 md:py-3 md:px-4 text-gray-600">
                        <%= job.jobLocation %>
                      </td>
                      <td class="py-2 px-3 md:py-3 md:px-4 text-gray-600">
                        <%= job.salary %>
                      </td>
                      <td class="py-2 px-3 md:py-3 md:px-4 text-gray-600">
                        <%= job.jobPosted.toDateString() %>
                      </td>
                      <td class="py-2 px-3 md:py-3 md:px-4">
                        <a
                          href="/viewJob/<%= job._id %>"
                          class="inline-flex items-center text-purple-500  hover:text-white hover:bg-purple-500 rounded px-2 py-1 md:px-4 md:py-2 border border-purple-500 transition-colors duration-300 w-full text-center sm:w-auto"
                        >
                          <!-- <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 hidden sm:block" fill="currentColor" viewBox="0 0 384 512">
                            <path d="M320 464c8.8 0 16-7.2 16-16l0-288-80 0c-17.7 0-32-14.3-32-32l0-80L64 48c-8.8 0-16 7.2-16 16l0 384c0 8.8 7.2 16 16 16l256 0zM0 64C0 28.7 28.7 0 64 0L229.5 0c17 0 33.3 6.7 45.3 18.7l90.5 90.5c12 12 18.7 28.3 18.7 45.3L384 448c0 35.3-28.7 64-64 64L64 512c-35.3 0-64-28.7-64-64L0 64z" />
                          </svg> -->
                          View Job
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="6" class="text-center py-4 text-gray-600">No jobs posted yet.</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </section>
    </main>
  </div>
  